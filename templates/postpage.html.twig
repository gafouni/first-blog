        <div class="post-preview">

          {% for post in posts %}
            <a href="?c=show&id={{post.id}}">
                <h4 class="post-title">{{post.title}}</h4>
                <h4 class="post-subtitle">Auteur : {{post.author}}</h4>
            </a>
            <h5 class="post-subtitle">
                Propose par
                {{post.user.firstName}} {{post.user.lastName}}
                 et publie le {{post.published|date("d/m/Y")}} 
            </h5>
          {% endfor %}

        </div>
        <!-- Divider-->
        <hr class="my-4"/>
        <hr class="my-4"/>

        <!-- Pager-->
